@model SpecializationViewModel
@{
    ViewData["Title"] = "Specialization";
    ViewData.AddActivePage(ManageNavPages.Specialization);
}

<h4>@ViewData["Title"]</h4>

<p>There are currently: @Model.Topics.Count topics in our database.</p>
<p>You have currently selected: <span class="spec-count">@Model.IncludedSpecs.Count</span> topics for specialization.</p>

<hr />
<form asp-controller="Manage" asp-action="Specialization" method="post" class="row">
    <input type="hidden" name="sid" class="sid" value="@Model.Speaker.Id"/>
    <div class="col-md-10">
        <ul class="nav nav-tabs">
            <li role="presentation" class="active"><a href="#include" class="include-tab" aria-controls="include" role="tab" data-toggle="tab">Current Specializations</a></li>
            <li role="presentation"><a href="#exclude" aria-controls="exclude" role="tab" class="exclude-tab" data-toggle="tab">More Topics</a></li>
        </ul>
        <div class="tab-content profile-tabs">
            <div role="tabpanel" class="tab-pane fade in active" id="include">
                <nav aria-label="Page navigation">
                    <ul class="pagination pagination-sm include-pages">
                        <li><a href="#a">A</a></li><li><a href="#b">B</a></li><li><a href="#C">C</a></li><li><a href="#d">D</a></li><li><a href="#e">E</a></li>
                        <li><a href="#f">F</a></li><li><a href="#g">G</a></li><li><a href="#h">H</a></li><li><a href="#i">I</a></li><li><a href="#j">J</a></li>
                        <li><a href="#k">K</a></li><li><a href="#l">L</a></li><li><a href="#m">M</a></li><li><a href="#n">N</a></li><li><a href="#o">O</a></li>
                        <li><a href="#p">P</a></li><li><a href="#q">Q</a></li><li><a href="#r">R</a></li><li><a href="#s">S</a></li><li><a href="#t">T</a></li>
                        <li><a href="#u">U</a></li><li><a href="#v">V</a></li><li><a href="#w">W</a></li><li><a href="#x">X</a></li><li><a href="#y">Y</a></li>
                        <li><a href="#z">Z</a></li>
                    </ul>
                </nav>
                <div class="included-inputs">
                    @foreach (var topic in Model.IncludedSpecs)
                    {
                        <div class="checkbox included-spec">
                            <span class="hidden">@topic.Name</span>
                            <input type="hidden" class="specid" value="@topic.Id">
                            <label>
                                <input name="IncludedSpecs" type="checkbox" value="@topic.TopicId" checked class="topic-check"/>
                                @topic.Name
                            </label>
                        </div>
                    }
                </div>
            </div>
            <div role="tabpanel" class="tab-pane fade" id="exclude">
                <nav aria-label="Page navigation">
                    <ul class="pagination pagination-sm exclude-pages">
                        <li><a href="#a">A</a></li><li><a href="#b">B</a></li><li><a href="#c">C</a></li><li><a href="#d">D</a></li><li><a href="#e">E</a></li>
                        <li><a href="#f">F</a></li><li><a href="#g">G</a></li><li><a href="#h">H</a></li><li><a href="#i">I</a></li><li><a href="#j">J</a></li>
                        <li><a href="#k">K</a></li><li><a href="#l">L</a></li><li><a href="#m">M</a></li><li><a href="#n">N</a></li><li><a href="#o">O</a></li>
                        <li><a href="#p">P</a></li><li><a href="#q">Q</a></li><li><a href="#r">R</a></li><li><a href="#s">S</a></li><li><a href="#t">T</a></li>
                        <li><a href="#u">U</a></li><li><a href="#v">V</a></li><li><a href="#w">W</a></li><li><a href="#x">X</a></li><li><a href="#y">Y</a></li>
                        <li><a href="#z">Z</a></li>
                    </ul>
                </nav>
                <div class="excluded-inputs">
                    @foreach (var topic in Model.ExcludedSpecs)
                    {
                        <div class="checkbox excluded-spec">
                            <span class="hidden topic-name">@topic.Name</span>
                            <label>
                                <input name="ExcludedSpecs" class="topic-check" type="checkbox" value="@topic.Id" />
                                @topic.Name
                            </label>
                        </div>
                    }
                </div>
            </div>            
        </div>
    </div> 

</form>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    @await Html.PartialAsync("_SpecializationScriptsPartial")
}