@model AddPageViewModel
@{
    ViewData["Title"] = "Add New Page";
    ViewData["Message"] = "Create a new page then press submit.";
}

<h2>@ViewData["Title"]</h2>
<p>@ViewData["Message"] - <a href="/admin/pages">Go Back</a></p>
<input type="submit" value="Save" class="btn btn-primary" />
<hr />
<br />
<form class="form" asp-controller="Admin" asp-action="PagesAdd" method="post">
    <div class="form-group">
        <label>Title:</label>
        <input class="form-control" id="title" asp-for="Title" />
    </div>
    <div class="form-group">
        <label>Content:</label>
        <textarea class="pageData" asp-for="Content"></textarea>
    </div>
    <div class="form-group">
        <label>URL:</label>
        <input class="form-control" id="topic" asp-for="Url" />
    </div>
    <div class="form-group">
        <label>Status:</label>
        <div class="radio">
            <label>
                <input type="radio" name="status" id="Published" checked asp-for="Status" value="0" />
                Published
            </label>
        </div>
        <div class="radio">
            <label>
                <input type="radio" name="status" id="Unpublished" asp-for="Status" value="1" />
                Unpublished
            </label>
        </div>
    </div>

    <hr />
    <input type="submit" value="Save" class="btn btn-primary" />
    <a href="/pages">Cancel</a>
</form>
